{
    "version": "4.16",
    "homepage": "https://github.com/2dust/v2rayN",
    "license": "BSD-3-Clause",
    "url": "https://github.com/2dust/v2rayN/releases/download/4.16/v2rayN-Core.zip",
    "extract_dir": "v2rayN-Core",
    "pre_install": [
        "foreach ($name in @('guiNConfig.json', 'user-wininet.json')) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        New-Item -Force -Path \"$dir\" -Name $name | Out-Null",
        "    }",
        "}"
    ],
    "bin": "v2rayN.exe",
    "shortcuts": [
        [
            "v2rayN.exe",
            "v2rayN"
        ]
    ],
    "persist": [
        "config.json",
        "guiNConfig.json"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/2dust/v2rayN/releases/download/$version/v2rayN.zip"
    }
}
