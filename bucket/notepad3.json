  "homepage": "https://github.com/rizonesoft/Notepad3",
  "license": "BSD-3-Clause",
  "bin": "Notepad3.exe",
  "url": [
    "https://github.com/rizonesoft/Notepad3/releases/download/RC_5.20.915.1/Notepad3_5.20.915.1.zip",
    "https://github.com/echoiron/echo-scoop/raw/main/scripts/notepad3/1_replace_notepad.bat",
